                <div class="full-with-text-inner">
                  <h2 class="heading" style="margin-top: 2rem;" style="margin-top: 2rem;">{{ label }}</h2>
                  {% if content.body %}
                    <p>{{ content.body }}</p>
                  {% endif %}
                  {% if content.field_cta_button_content.0['#url'] %}
                    <div class="alta-cta-wrapper"><a href="{{ content.field_cta_button_content.0['#url'] }}" class="alta-btn dark-gray white-hover"> {{ content.field_cta_button_content.0['#title'] }}</a></div>
